{
    "compilerOptions": {
      "module": "commonjs",
      "target": "es6",
      "baseUrl": "./",
      "paths": {
        "@root/*": ["./*"],
        "@src": ["./src"],
        "@controllers": ["./src/controllers"],
        "@models": ["./src/models"],
        "@services": ["./src/services"],
        "@utils": ["./src/utils"],
        "@config": ["./src/config"],
        "@validations": ["./src/validations"],
        "@middlewares": ["./src/middlewares"]
      }
    },
    "exclude": ["node_modules", "**/node_modules/*"]
  }
  